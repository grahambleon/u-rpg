{
  "compilerOptions": {
    "module": "ES2022",
    "esModuleInterop": true,
    "target": "ES5",
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist/",
    "baseUrl": "./packages/server",
    "paths": {
      "*": ["node_modules/*", "types/*"]
    }
  },
  "include": ["./declaration.d.ts", "packages/**/*"]
}
